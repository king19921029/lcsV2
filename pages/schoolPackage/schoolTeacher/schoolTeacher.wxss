}
.margin_top{
  margin: 26rpx 0 26rpx 0;
}
.com_header .font_weight{
  font-size: 34rpx;
}
.banner{
  height: 290rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.com_header{
  font-size: 30rpx;
  padding: 30rpx 0;
}
.list_box{
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}
.teacher_list{
  margin-top:30rpx;
  width: 332rpx;
  height: 280rpx;
  border-radius: 8rpx;
  border: 1px solid #e6e6e6;
  overflow: hidden;
  padding-bottom: 20rpx;
}
.t_list_img{
  width: 100%;
  height: 186rpx;
}
.t_list_msg_title{
  width: 222rpx;
  text-align: end;
  font-size: 28rpx;
}
.t_list_msg{
  justify-content: space-between;
}
.t_list_msg .font_weight{
  font-size: 30rpx;
  width: 100rpx;
}
.t_list_msg > view{
  padding-top:10rpx;
}
