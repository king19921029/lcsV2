}
.border_right text{
  display: block;
  width: 40rpx;
  height: 40rpx;
  border:1px solid;
  border-radius: 50%;
  margin-right: -6rpx;
}
.hedaer > view{
  width: 50%;
  height: 140rpx;
  align-items: center;
  justify-content: center;
}
.teacher :last-child{
  border-bottom: none;
}
.t_list{
  height: 160rpx;
}
.t_list>view{
  width: 90%;
  line-height: 44rpx;
  font-size: 30rpx;
  color: #3d3d3d;
