.fx_button{
  background: #fff;
  display: flex;
}
.box{
  font-size: 28rpx;
  background: #f7fafa;
  height: 100vh;
}
.notes_none{
  background: #fff;
  height: 90vh;
  text-align: center;
  color: #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.no_notes_font{
  margin:40rpx 0 40rpx 0;
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
}
.header{
  width: 100%;
  border-top: 1px solid #ececec;
  border-bottom: 1px solid #ececec;
  color: #8f8f8f;
  background: #fff;
}
.none_notes{
  width: 100%;
  height:200rpx;
  line-height: 30vh;
  text-align: center;
  color:#8f8f8f;
  font-size: 26rpx;
}
.header_icon{
  width: 42rpx;
  height: 42rpx;
}
.header_margin_left{
  margin-left: 32rpx;
}
.margin_left{
  margin-left: 20rpx;
}
.header_view view{
  height: 110rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
  padding: 0 20rpx;
}
.header .hover_color{
  border-bottom: 5rpx solid #f9552f;
  color: #f9552f;
}
.header_right_view{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #343434;
}
.header_right_view image{
  margin-left: 10px;
}
/* 文章 */
.details{
  margin-top: 20rpx;
  /* border-top: 1px solid #ececec; */
  border-bottom: 1px solid #e9e9e9;
  background: #fff;
}
.notes_comPadding{
  padding: 20rpx 0;
}
.bottom_block{
  background:#f7fafa;
  height:22rpx;
  width: 100%;
  line-height: 1
}
.details_header{
  padding: 20rpx 0;
}
.details_header text{
  display: block;
}
.phone_icon{
  width: 62rpx;
  height: 62rpx;
  margin-right: 16rpx;
  position: relative
}
.vip_icon{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  position: absolute;
  right: -10%;
  bottom: -5%;
}
.phone_icon .user_icon{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.notes_more_pic .img_boxs{
  display: inline-block;
  width: 194rpx;
  height: 194rpx;
  border-radius: 12rpx;
  margin-left: 14rpx;
}
.notes_more_pic :first-child{
  margin: 0;
}
.notes_one_pic .one_pic{
  width: 100%;
  height:307rpx;
  border-radius: 20rpx;
  line-height: 1;
}
.notes_more_pic,.notes_one_pic{
  line-height: 1;
}

.delete_icon{
  width: 40rpx;
  height: 40rpx;
  margin-left:6rpx;
}

.article{
  font-size: 28rpx;
  line-height: 50rpx;
}
.article_som{
  font-size: 28rpx;
  line-height: 50rpx;
}
.article_noall{
  height: 181rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: wrap;
}
.article_icon{
  display: flex;
  justify-content:center;
  padding: 10rpx 0;
}
.article_icon image{
  width:34rpx;
  height: 34rpx;
}
.say{
  font-size: 30rpx;
}
.say_img{
  width: 100%;
  height:307rpx;
  /* border-radius: 10rpx; */
  /* background: #b5b5b5; */
}
.copy_box{
  border-top:1px solid #e9e9e9;
}
.card{
  border:1px solid #f1f1f3;
  border-radius: 10rpx;
  background: #f7fafa;
  padding: 10rpx 0;
  margin-top: 10rpx;
  font-size: 26rpx;
  text-indent: 24rpx;
}

.card_msg_time{
  margin-left: 10rpx;
}
.card_footer{
  height: 120rpx;
}
.yc_foot{
  height: 58rpx;
}
.card_footer_left{
  padding:10rpx 16rpx;
  background:#fafafa; 
  border: 1px solid #eeeeee;
  border-radius: 10rpx;
  font-size: 30rpx;
}
.card_footer_right{
  color:#8f8f8f;
}
.zz_icon{
  width: 31rpx;
  height: 25rpx;
  margin-right: 10rpx;
}
.fx_icon{
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

/* 转载样式 */
.reprint_notes_time{
  font-size: 26rpx;
  color:#8f8f8f;
}
.reprint_card_footer{
  width: 60%;
  margin-left: 40%;
}
.reprint_card_footer{
  font-size: 28rpx;
}

/*浮层 */
.footer_box{
  width: 100%;
  height: 100vh;
  background: rgba(000,000,000,.5);
  position:fixed;
  z-index: 100;
  top:0;
  left: 0;
}
.footer_btn_box{
  position:absolute;
  bottom: 0;
  left: 0;
  background: #fff;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.footer_btn_box>view{
  width: 100%;
  padding: 30rpx 0;
  text-align: center;
  border-bottom: 1rpx solid;
}
button{
  line-height: normal;
  font-size: 32rpx;
}
.footer_btn_box :last-child{
  border-bottom:none;
}



