.bg_box{
  width: 100%;
  height: 80vh;
  z-index: 100;
  position: relative;
}
.bg_box>image{
  height: 100%;
  width: 100%;
}
.po_box{
  width: 80%;
  position: absolute;
  top:11%;
  left: 10%;
  z-index: 999;
}
.po_box_content{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  background: rgba(249,249,249,0.23);
  border-radius: 30rpx;
  padding-bottom: 50rpx;
}
.po_box_footer{
  width: 80%;
  /* background: rgba(249,249,249,0.23); */
  border-radius: 30rpx;
  margin-top: 10rpx;
  position: absolute;
  bottom: 3%;
  left: 10%;
  padding: 20rpx 0;
}
.logo{
  width:300rpx;
  height: 45rpx;
}
.po_box_footer .display_flex{
  justify-content:space-between;
  color: #fff;
  width: 42%;
  margin-left: 29%;
}

.photo{
  width: 114rpx;
  height: 114rpx;
  background:#fff;
  border-radius: 50%;
  margin-top: -60rpx;
}
.photo image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.name{
  font-size: 40rpx;
  margin: 30rpx 0 18rpx 0;
  font-weight: bold;
}
.say{
  font-size: 22rpx;
}
.day_box{
  width: 65%;
  display: flex;
  text-align: center;
  justify-content: space-between;
  line-height: 1;
  margin-top: 66rpx;
}
.day_box text{
  color: #fe562f;
  font-size: 36rpx;
  font-weight: bold;
}
.day_box .font_28{
  margin-top: 12rpx;
  font-weight: bold;
}
.fri_26{
  margin-top: 84rpx;
}
.sen_26{
  margin-top: 10rpx;
}



.footer{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 20vh;
}
.footer text{
  font-size:28rpx;
  color:#919192;
}
.footer .display_flex{
  flex-direction: column;
}
.footer image{
  width: 102rpx;
  height: 102rpx;
}
.logo_box{
  margin-top: 20%;
}