.music{
  /* left: center; */
  width:50%;
  /* margin-left: 25%; */
  height: 42rpx;
  position: relative;
  display: flex;
  justify-content:space-between;
  align-items: center;
}
.music text{
  width: 8rpx;
  height: 10rpx;
  /* position: absolute; */
  border-radius: 13rpx;
  bottom:0;
  background-color: #fff;
}

.music text:nth-of-type(1){
  left:0;
}
.music text:nth-of-type(2){
  left:10rpx;
}
.music text:nth-of-type(3){
  left:20rpx;
}
.music text:nth-of-type(4){
  left:30rpx;
}
.music text:nth-of-type(5){
  left:40rpx;
}

.music.active text:nth-of-type(1){
  animation:jump 0.66s linear infinite;
}
.music.active text:nth-of-type(2){
  animation:jump 0.8s linear infinite;
}
.music.active text:nth-of-type(3){
  animation:jump 0.7s linear infinite;
}
.music.active text:nth-of-type(4){
  animation:jump 0.5s linear infinite;
}
.music.active text:nth-of-type(5){
  animation:jump 0.9s linear infinite;
}

@keyframes jump{
	0%{height:10rpx}
	50%{height: 30rpx}
  100%{height: 40rpx}
}
