.login{
	width: 100%;
	min-height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	background-color: #fd552e;
	padding: 76rpx 34rpx 72rpx;
	box-sizing: border-box;
}
.login_title{
	font-size: 48rpx;
	color: white;
}

.login_tel,.login_password,.login_vcode{
	width: 100%;
	height: 135rpx;
	font-size: 40rpx;
	/*color: #ff906e;*/
	margin-bottom: 20rpx;
	position: relative;
	z-index: 10;
}
.login_tel input,.login_password input,.login_vcode input{
	width: 100%;
	height: 100%;
	line-height: 135rpx;
	border-bottom: 1px solid #ff906e;
	color: white;
}
.login_tip{
	width: 100%;
}
.forget{
	font-size: 26rpx;
	color: white;
	position: relative;
}
.forget_tip{
	position: absolute;
	left: 0;
}
.checkout_tip{
	position: absolute;
	right: 0;
}
.login_btn{
	margin: 80rpx auto 30rpx;
}
.login_btn button{
	width: 100%;
	height: 110rpx;
	line-height: 110rpx;
	color: #fd552e;
	font-size: 40rpx;
	border-radius: 110rpx;
}
.new_user_login{
	font-size: 28rpx;
	color: white;
	text-align: center;
}

/*发送验证码*/
.send_vcode{
	width: 214rpx;
	height: 60rpx;
	background-color: white;
	color: #fd552e;
	line-height: 60rpx;
	text-align: center;
	position: absolute;
	right: 0;
	top: 37rpx;
	border-radius: 60rpx;
	font-size: 24rpx;
	z-index: 20;
}
.errorBtn{
	width: 100%;
	height: 110rpx;
	line-height: 110rpx;
	color: white !important;
	font-size: 40rpx;
	border-radius: 110rpx;
	background-color: #E0E0E0;
}

.wechat_login{
	width: 100%;
	font-size: 30rpx;
	text-align: center;
	color: white;
	position: absolute;
	bottom: 72rpx;
	left: 0;
	padding:0;
	background-color: #fd552e !important;
	border:none;
	border-radius: none;
	line-height: 1.5;
}
.wechat_login image{
	width: 80rpx;
	height: 60rpx;
}