.coupon{
	width: 100%;
	min-height: 100%;
	position: absolute;
	top:0;
	left: 0;
	background-color: #fafafa;
}
.coupon,.coupon_box{
	width: 100%;
	/*background-color: #fafafa;*/
}
.top_input{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	/*text-indent: 30rpx;*/
	background-color: white;
	overflow: hidden;
	position: relative;
	margin-top: 30rpx;
	padding: 8rpx 40rpx;
	box-sizing: border-box;
	font-size: 30rpx;
}
.coupon_list{
	width: 100%;
	padding-top: 20rpx;
}
.coupon_item{
	width: 92%;
	margin: 0 auto 20rpx;
	border: 1px solid #eaeaea;
	padding: 34rpx 24rpx 30rpx 24rpx;
	box-sizing: border-box;
	position: relative;
}
.item_money{
	font-size: 40rpx;
	color: #fd552e;
}
.chooseBox{
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	position: absolute;
	top: 24rpx;
	right: 24rpx;
	border: 1px solid #ccc;
}
.chooseBox image{
	width: 60rpx;
	height: 60rpx;
	position: absolute;
	left: 0;
	top: 0;
}
.item_time,.item_rule,.item_tip{
	font-size: 28rpx;
	color: black;
}
.item_rule{
	margin-top: 68rpx;
	position: relative;
}
.rule_tip{
	color: #fd552e;
	position: absolute;
	right: 0;
}


.nouse_color_text{
	color: #cfcfcf;
}
.nouse_color_bg{
	background-color: #cfcfcf;
}

/*wrap弹窗*/
.fixed_wrap{
	width: 100%;
	min-height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background-color: rgba(0,0,0,.5);
}
.wrap_box{
	width: 594rpx;
	height: 513rpx;
	border-radius: 40rpx;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-top: -256.6rpx;
	margin-left: -297rpx;
	background-color: white;
	overflow: hidden;
}
.off_wrap{
	width: 100%;
	font-size: 42rpx;
	text-align: left;
	height: 114rpx;
	border-bottom: 1px solid #e4e4e4;
	color: #ff5517;
	position: relative;
}
.off_wrap image{
	width: 42rpx;
	height: 42rpx;
	position: absolute;
	left: 38rpx;
	top: 38rpx;
}
.wrap_title{
	font-size: 40rpx;
	color: #ff6344;
	text-align: center;
	line-height: 116rpx;
}
.coupon_code{
	width: 90%;
	height: 100rpx;
	border: 2px solid #f0f0f0;
	margin: 0 auto;
	text-align: center;
}
.wrap_btn{
	width: 100%;
	position: absolute;
	bottom: 0;
	text-align: center;
}
.isno,.isyes{
	display: inline-block;
	width: 50%;
	font-size: 28rpx;
	height: 120rpx;
	line-height: 120rpx;
	text-align: center;
}
.isno{
	color: #999999;
	background-color: white;
}
.isyes{
	color: white;
	background-color: #fd552e;
}