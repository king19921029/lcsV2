.account{
	width: 100%;
	background-color: #fafafa;
}
.section{
	width: 100%;
	height: 109rpx;
	border-bottom: 1px solid #ececec;
	position: relative;
	background-color: white;
}
.account_label{
	/*font-size: 30rpx;*/
	color: black;
	font-weight: bold;
	position: absolute;
	left: 38rpx;
	top: 42rpx;
	z-index: 20;
}
.account_balance{
	height: 109rpx;
	line-height: 109rpx;
	font-size: 35rpx;
	color: #fe5430;
	position: absolute;
	right: 36rpx;
	font-weight: bold;
}
.account_balance_text{
	font-size: 27rpx;
}

/*充值金额*/
.account_choose{
	width: 100%;
	padding-bottom: 36rpx;
	margin-bottom: 20rpx;
	background-color: white;
}
.account_title{
	width: 100%;
	height: 109rpx;
	line-height: 109rpx;
	font-size: 30rpx;
	text-indent: 38rpx;
	font-weight: bold;
}
.choose_box{
	width: 100%;
	text-align: center;
}
.choose_item{
	display: inline-block;
	width: 28%;
	padding: 18rpx 0;
	margin: 1%;
	border: 1px solid #fe5430;
	border-radius: 5px;
}
.choose_money{
	font-size: 30rpx;
	color: #fe5430;
}
.choose_rmb{
	font-size: 28rpx;
	color: #989599;
}
.active_color_text{
	color: white;
}
.active_color_bg{
	background-color: #fe5430;
}
.section_arrow{
	width: 13rpx;
	height: 23rpx;
	position: absolute;
	right: 31rpx;
	top: 45rpx;
}
.section_page{
	display: block;
	line-height: 109rpx;
	font-size: 28rpx;
	position: absolute;
	right: 50rpx;
	color: #ff5d43;
}

/*购买须知*/
.waring{
	width: 100%;
	padding: 40rpx 40rpx 68rpx 40rpx;
	box-sizing: border-box;
	margin-bottom: 120rpx;
}
.waring view{
	font-size: 28rpx;
	color: #868686;
	line-height: 56rpx;
}
.footer{
	width: 100%;
	height: 120rpx;
	line-height: 120rpx;
	background-color: #fe5430;
	color: white;
	font-size: 30rpx;
	position: fixed;
	bottom: 0;
	text-align: center;
}