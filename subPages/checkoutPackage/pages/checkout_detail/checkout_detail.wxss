	background-color: #fafafa;
	margin-bottom: 200rpx;
}
.checkout_header{
	width: 100%;
	padding: 0 30rpx;
	height: 127rpx;
	border-bottom: 1px solid #efefef;
	border-top: 1px solid #efefef;
	box-sizing: border-box;
	background-color: white;
}
.left_name{
	float: left;
	line-height: 127rpx;
}
.right_time{
	width: 92rpx;
	height: 127rpx;
	float: right;
	font-size: 21rpx;
	padding-top: 35rpx;
	box-sizing: border-box;
}
.number{
	width: 100%;
	text-align: left;
}
.big_number{
	font-size: 25rpx;
	color: #fd5632;
}
.timeout{
	width: 100%;
	padding: 10rpx auto;
	text-align: center;
	border-top: 3rpx solid #fd5632;
}
swiper{
	width: 100%;
	height: 900rpx;
}
.answer{
	width: 100%;
	padding: 30rpx;
	box-sizing: border-box;
	background-color: white;
}
.anwer_content{
	width: 100%;
	font-size: 30rpx;
	margin-bottom: 30rpx;
	line-height: 50rpx;
}
.anwer_list{
	width: 100%;
	padding: 0 20rpx;
	box-sizing: border-box;
}
.anwer_item{
	overflow: hidden;
	padding: 10rpx auto;
	margin-bottom: 20rpx;
}
.item_label{
	width: 63rpx;
	height: 63rpx;
	border-radius: 50%;
	border: 1px solid #828282;
	line-height: 63rpx;
	text-align: center;
	float: left;
	margin-right:20rpx;
}
.item_content{
	font-size: 30rpx;
	line-height: 40rpx;
	padding-top: 13rpx;
	padding-left: 96rpx;
}




.active_color{
	color: white;
	border-color: #fd5632;
	background-color: #fd5632;
}
.rich{
	font-size: 30rpx;
}