.checkout{
	width: 100%;
	background-color: #fafafa;
	padding-bottom: 120rpx;
}
.checkout_banner{
	width: 100%;
	height: 518rpx;
	position: relative;
}
.checkout_banner image{
	width: 100%;
	height: 100%;
}
.checkout_tip{
	width: 100%;
	position: absolute;
	bottom: 30rpx;
}
.checkout_title{
	font-size: 38rpx;
	color: white;
	padding-left: 30rpx;
	line-height: 60rpx;
}
.label{
	width: 100%;
	height: 45rpx;
	font-size: 25rpx;
	line-height: 45rpx;
	color: white;
	margin: 0rpx auto;
	overflow: hidden;
	padding-left: 30rpx;
	padding-right: 30rpx;
	box-sizing: border-box;
}
.label_left{
	float: left;
}
.label_right{
	float: right;
}


.kecheng_teacher{
	width: 100%;
	padding: 0 4%;
	box-sizing: border-box;
	background-color: white;
	border-bottom: 1px solid #f4f4f4;
	padding-bottom: 37rpx;
	margin-top: 30rpx;
}
.teacher_title{
	font-size: 33rpx;
	color: black;
	font-weight: bold;
	height: 100rpx;
	line-height: 100rpx;
}
.teacher_text{
	font-size: 26rpx;
	color: #3a3a3a;
	line-height: 50rpx;
}


.checkout_list_box{
	width: 100%;
	border-top: 1px solid #ccc;
	border-bottom: 1px solid #efefef;
}
.list_title{
	font-size: 33rpx;
	color: black;
	font-weight: bold;
	height: 100rpx;
	line-height: 100rpx;
	text-indent: 30rpx;
	border-bottom: 1px solid #efefef;
}
.checkout_list{
	width: 100%;
	padding-left: 20rpx;
	padding-right: 20rpx;
	box-sizing: border-box;
}
.list_item{
	width: 100%;
	height: 105rpx;
	line-height: 105rpx;
	font-size: 25rpx;
	color: #8e8e8e;
	border-bottom: 1px solid #efefef;
	text-indent: 10rpx;
}
.list_item:last-child{
	border-bottom: none;
}


.checkout_footer{
	width: 100%;
	height: 120rpx;
	font-size: 28rpx;
	color: white;
	text-align: center;
	line-height: 120rpx;
	background-color: #fe5531;
	position: fixed;
	bottom: 0;
}