				<view class="label_item_middle">理财知识</view>
			</view>
		</view>
	</view>

	<!-- 搜索后 -->
	<view wx:else>
		<!-- 课程 -->
		<view>
			<view class="searchOver">
				<view class="over_title">
					<text class="title_l">课程</text>
					<text class="title_r" bindtap="to_more">查看全部</text>
				</view>
			</view>
			<view class="list">
			    <view class="list_box">
			      <view class="list_content">
			         <view class="list_item">
			            <image class="list_item_userhead" src="../../images/icon.jpg"></image>
			            <view class="list_item_middle">
			              <view class="list_item_middle_title">刘润</view>
			              <view class="list_item_middle_tip">今晚8点告诉你成功秘诀今晚8点告诉你成功秘诀</view>
			            </view>
			            <image class="list_item_arrow" src="../../images/icn_arrow.png"></image>
			          </view>
			      </view>
			    </view>
			    <view class="list_box">
			      <view class="list_content no_border">
			         <view class="list_item">
			            <image class="list_item_userhead" src="../../images/icon.jpg"></image>
			            <view class="list_item_middle">
			              <view class="list_item_middle_title">刘润</view>
			              <view class="list_item_middle_tip">今晚8点告诉你成功秘诀今晚8点告诉你成功秘诀</view>
			            </view>
			            <image class="list_item_arrow" src="../../images/icn_arrow.png"></image>
			          </view>
			      </view>
			    </view>
			</view>
		</view>


		<!-- 活动 -->
		<view>
			<view class="searchOver">
				<view class="over_title top_margin">
					<text class="title_l">活动</text>
				</view>
			</view>

			<view class="panal">
				<view>如何评价apple投放的大量，敬mac背后你的广告</view>
				<image src="../../images/DSC_0055_mix02.jpg"></image>
			</view>
		</view>

		<!-- 文章 -->
		<view>
			<view class="searchOver">
				<view class="over_title top_margin">
					<text class="title_l">文章</text>
				</view>
			</view>

			<view class="writings_list">
				<view class="writings_item">
					<view class="writings_text_l">
						<text>精选|10天暴涨50%、乐视网搭上91顺风车深交所重点监控</text>
