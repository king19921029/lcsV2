<view class="search">
	<!-- 搜索前 -->
	
	<view class="section">
	  <block>
	    <icon class="searchIcon" type="search" size="17"/>
	  </block>
	  <input placeholder="为什么要做理财师" bindinput="search" auto-focus/>
	  <text class="quxiao">取消</text>
	</view>
	<view wx:if="{{isSearch}}">
		<view class="history">
			<view class="history_item">
				<text>银行</text>
			</view>
			<view class="history_item">
				<text>银行</text>
			</view>
			<view class="history_item">
				<text>银行</text>
			</view>

			<view class="allSearch">
				全部搜索记录
			</view>
		</view>

		<view class="hot_search">
			<view class="hot_item_title">
				热门搜索
			</view>

			<view class="label">
				<view class="label_item_middle">识识</view>
				<view class="label_item_middle">理财知</view>
