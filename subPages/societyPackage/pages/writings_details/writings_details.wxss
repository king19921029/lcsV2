	padding-left: 24rpx;
	padding-right: 24rpx;
	line-height: 64rpx;
}
.edit_input{
	width: 80%;
	height: 64rpx;
	border-radius: 64rpx;
	background-color: #f5f5f5;
	font-size: 30rpx;
	color: black;
	padding-left: 24rpx;
	padding-right: 24rpx;
	line-height: 64rpx;
}
.send_message{
	width: 120rpx;
	height: 106rpx;
